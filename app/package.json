{
  "name": "clickr",
  "version": "1.0.0",
  "description": "Cross-platform input remapper",
  "main": "./out/main/index.js",
  "author": "TODO",
  "homepage": "TODO",
  "repository": {
    "type": "git",
    "url": "https://github.com/clickrTeam/clickr-app.git"
  },
  "bugs": {
    "url": "https://github.com/clickrTeam/clickr-app/issues"
  },
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "electron-vite build && electron-builder --mac",
    "lint:fix": "eslint --fix --ext .js,.jsx .",
    "build:linux": "electron-vite build && electron-builder --linux"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.10.0",
    "@radix-ui/react-dialog": "^1.1.10",
    "@radix-ui/react-dropdown-menu": "^2.1.11",
    "@radix-ui/react-label": "^2.1.4",
    "@radix-ui/react-select": "^2.2.2",
    "@radix-ui/react-slot": "^1.2.0",
    "@radix-ui/react-tabs": "^1.1.8",
    "axios": "^1.8.4",
    "child-process-promise": "^2.2.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "electron-log": "^5.4.3",
    "express": "^5.1.0",
    "framer-motion": "^12.16.0",
    "lucide-react": "^0.501.0",
    "motion": "^12.7.4",
    "next-themes": "^0.4.6",
    "react-hook-form": "^7.62.0",
    "react-router-dom": "^6.23.1",
    "sonner": "^2.0.5",
    "systeminformation": "^5.27.1",
    "tailwind-merge": "^3.2.0",
    "tw-animate-css": "^1.2.7",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.0.0",
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@electron-toolkit/utils": "^4.0.0",
    "@tailwindcss/vite": "^4.1.4",
    "@types/child-process-promise": "^2.2.6",
    "@types/electron": "^1.4.38",
    "@types/express": "^5.0.2",
    "@types/node": "^22.13.13",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@types/react-router-dom": "^5.3.3",
    "@types/systeminformation": "^3.23.1",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.21",
    "electron": "^35.0.3",
    "electron-builder": "^25.1.8",
    "electron-builder-sandbox-fix": "^1.1.1",
    "electron-vite": "^3.1.0",
    "eslint": "^9.23.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^4.1.4",
    "typescript": "^5.8.2",
    "vite": "^6.2.3"
  },
  "build": {
    "appId": "com.clickr.app",
    "productName": "Clickr",
    "files": [
      "out",
      "node_modules",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "asar": false,
    "afterPack": "./build-hooks-linux.js",
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Utility",
      "icon": "build/icon.png"
    }
  }
}
